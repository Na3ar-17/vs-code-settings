{
	// -------------------------------------------------------------------------
	// Editor Appearance and Behavior
	// -------------------------------------------------------------------------
	"editor.folding": true,
	"editor.renderWhitespace": "none",
	"editor.showFoldingControls": "never",
	"editor.renderLineHighlight": "none",
	"editor.smoothScrolling": true,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.scrollBeyondLastLine": true,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.glyphMargin": false,
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "hidden",
	"editor.accessibilitySupport": "off",
	"editor.wordWrapColumn": 80,
	"editor.linkedEditing": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.inlineSuggest.enabled": true,
	"editor.tabSize": 2,
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit"
	},
	"editor.bracketPairColorization.enabled": false,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.guides.bracketPairs": false,
	"editor.guides.indentation": false,

	// -------------------------------------------------------------------------
	// Cursor Settings
	// -------------------------------------------------------------------------
	"editor.cursorBlinking": "expand",
	"editor.cursorStyle": "line-thin",
	"editor.cursorSmoothCaretAnimation": "explicit",

	// -------------------------------------------------------------------------
	// Font Settings
	// -------------------------------------------------------------------------
	"editor.fontSize": 13,
	"editor.lineHeight": 18.5,
	"editor.fontWeight": "400",
	"editor.fontLigatures": true,
	"editor.fontFamily": "Maple Mono Light, IBM iScript REDGroup, Maple Mono, JetBrains Mono Bold, Maple Mono Italic",

	// -------------------------------------------------------------------------
	// Terminal Settings
	// -------------------------------------------------------------------------
	"terminal.integrated.fontFamily": "IBM iScript REDGroup",
	"terminal.integrated.fontSize": 13,
	"terminal.integrated.cursorStyle": "line",

	// -------------------------------------------------------------------------
	// Minimap Settings
	// -------------------------------------------------------------------------
	"editor.minimap.showSlider": "always",
	"editor.minimap.size": "fit",
	"editor.minimap.renderCharacters": false,

	// -------------------------------------------------------------------------
	// Explorer and Navigation
	// -------------------------------------------------------------------------
	"explorer.autoReveal": "focusNoScroll",
	"explorer.autoOpenDroppedFile": false,
	"explorer.confirmDelete": true,
	"explorer.confirmDragAndDrop": true,
	"explorer.confirmPasteNative": false,
	"explorer.compactFolders": false,
	"symbols.hidesExplorerArrows": false,
	"explorer.decorations.badges": false,

	// -------------------------------------------------------------------------
	// Window and Workbench Appearance
	// -------------------------------------------------------------------------
	"window.density.editorTabHeight": "compact",
	"workbench.layoutControl.enabled": false,
	"workbench.editor.editorActionsLocation": "hidden",
	"workbench.editor.empty.hint": "hidden",
	"window.titleBarStyle": "custom",
	"window.title": "${rootName}",
	"workbench.editor.tabSizing": "shrink",
	"workbench.startupEditor": "newUntitledFile",
	"workbench.tree.enableStickyScroll": false,
	"window.commandCenter": false,
	"workbench.activityBar.location": "hidden",
	"workbench.editor.enablePreview": false,
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"window.menuBarVisibility": "toggle",
	"window.customTitleBarVisibility": "never",
	"workbench.iconTheme": "bearded-icons",
	"workbench.productIconTheme": "fluent-icons",
	"workbench.tree.renderIndentGuides": "none",

	// -------------------------------------------------------------------------
	// Debugging Settings
	// -------------------------------------------------------------------------
	"debug.toolBarLocation": "hidden",
	"debug.focusWindowOnBreak": false,
	"debug.showInlineBreakpointCandidates": false,
	"debug.showBreakpointsInOverviewRuler": false,

	// -------------------------------------------------------------------------
	// Prettier Formatting
	// -------------------------------------------------------------------------
	"prettier.semi": false,
	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": true,
	"prettier.arrowParens": "avoid",

	// -------------------------------------------------------------------------
	// Language Specific Formatting
	// -------------------------------------------------------------------------
	"[prisma]": {
		"editor.defaultFormatter": "Prisma.prisma"
	},
	"html.completion.attributeDefaultValue": "singlequotes",
	"html.autoClosingTags": true,
	"javascript.autoClosingTags": true,
	"typescript.autoClosingTags": true,
	"css.lint.unknownAtRules": "ignore",
	"less.lint.unknownAtRules": "ignore",
	"scss.lint.unknownAtRules": "ignore",

	// -------------------------------------------------------------------------
	// JavaScript and TypeScript Settings
	// -------------------------------------------------------------------------
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.preferences.quoteStyle": "single",
	"javascript.preferences.quoteStyle": "single",
	"javascript.format.semicolons": "remove",
	"typescript.format.semicolons": "remove",
	"js/ts.implicitProjectConfig.experimentalDecorators": true,
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,

	// -------------------------------------------------------------------------
	// NextJS Custom Labels
	// -------------------------------------------------------------------------
	"workbench.editor.customLabels.patterns": {
		"**/app/**/[[]*[]]/[[]*[]]/page.tsx": "${dirname(2)}/${dirname(1)}/${dirname}/page.tsx",
		"**/app/**/[[]*[]]/page.tsx": "${dirname(1)}/${dirname}/page.tsx",
		"**/app/**/page.tsx": "${dirname}/page.tsx",
		"**/app/**/[[]*[]]/[[]*[]]/layout.tsx": "${dirname(2)}/${dirname(1)}/${dirname}/layout.tsx",
		"**/app/**/[[]*[]]/layout.tsx": "${dirname(1)}/${dirname}/layout.tsx",
		"**/app/**/layout.tsx": "${dirname}/layout.tsx"
	},

	// -------------------------------------------------------------------------
	// Breadcrumbs Settings
	// -------------------------------------------------------------------------
	"breadcrumbs.icons": false,
	"breadcrumbs.showKeys": false,
	"breadcrumbs.showFiles": false,
	"breadcrumbs.symbolPath": "off",
	"breadcrumbs.showArrays": false,
	"breadcrumbs.showEvents": false,
	"breadcrumbs.showFields": false,
	"breadcrumbs.showClasses": false,
	"breadcrumbs.showMethods": false,
	"breadcrumbs.showBooleans": false,
	"breadcrumbs.showFunctions": false,
	"breadcrumbs.showConstants": false,
	"breadcrumbs.showEnumMembers": false,
	"breadcrumbs.showConstructors": false,

	// -------------------------------------------------------------------------
	// Git Settings
	// -------------------------------------------------------------------------
	"git.autofetch": true,
	"git.confirmSync": false,
	"git.ignoreRebaseWarning": true,
	"git.enableSmartCommit": true,
	"git.decorations.enabled": true,

	// -------------------------------------------------------------------------
	// Editor Scroll and Sticky Settings
	// -------------------------------------------------------------------------
	"editor.stickyScroll.scrollWithEditor": false,
	"editor.stickyScroll.enabled": false,

	// -------------------------------------------------------------------------
	// Intellisense and AI Settings
	// -------------------------------------------------------------------------
	"editor.quickSuggestionsDelay": 0,
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"editor.gotoLocation.multipleDefinitions": "goto",
	"gitlens.ai.model": "vscode",
	"gitlens.ai.vscode.model": "copilot:o3-mini",

	// -------------------------------------------------------------------------
	// GitHub Copilot Settings
	// -------------------------------------------------------------------------
	"github.copilot.chat.commitMessageGeneration.instructions": [
		{
			"text": "Always use present tense when describing changes."
		},
		{
			"text": "First word must be in lowercase."
		},
		{
			"text": "For first word user feat: for new features, fix: for bug fixes, docs: for documentation changes, style: for formatting changes, refactor: for code restructuring, perf: for performance improvements, chore: for maintenance tasks."
		},
		{
			"text": "Do not use any other prefixes."
		},
		{
			"text": "Use conventional commit message format."
		},
		{
			"text": "Commit message must include all changes made in the commit."
		}
	],

	"github.copilot.chat.codeGeneration.instructions": [
		{
			"text": "Do not write comments for any peace of code."
		},
		{
			"text": "Do not use type any for any variable of function or whatever."
		},
		{
			"text": "Use cammelCase for variables, functions and methods."
		},
		{
			"text": "Use PascalCase for classes and interfaces."
		},
		{
			"text": "Use UPPER_SNAKE_CASE for constants."
		},
		{
			"text": "Use single quotes for strings."
		},
		{
			"text": "Use double quotes for JSX attributes."
		},
		{
			"text": "Use triple backticks for code blocks."
		},
		{
			"text": "Use single backticks for inline code."
		},
		{
			"text": "For interface names use I prefix.",
			"language": "typescript"
		},
		{
			"text": "For types use T or Type prefix.",
			"language": "typescript"
		},
		{
			"text": "For enums use E or Enum prefix, and instead of enum use object with as const assertion.",
			"language": "typescript"
		}
	],

	// -------------------------------------------------------------------------
	// File and Security Settings
	// -------------------------------------------------------------------------
	"files.defaultLanguage": "plaintext",
	"files.insertFinalNewline": true,
	"diffEditor.ignoreTrimWhitespace": false,
	"security.workspace.trust.untrustedFiles": "open",

	// -------------------------------------------------------------------------
	// Animations and Visual Effects
	// -------------------------------------------------------------------------
	"animations.CursorAnimationOptions": {
		"TrailLength": 2
	},
	"vscode_custom_css.imports": [
		"file:///home/nazar/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
	],

	// -------------------------------------------------------------------------
	// Other Extensions and Miscellaneous
	// -------------------------------------------------------------------------
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.donotVerifyTags": true,
	"bracket-pair-colorizer-2.depreciation-notice": false,
	"cSpell.userWords": [
		"autofetch",
		"clsx",
		"datasource",
		"donot",
		"esbenp",
		"hookform",
		"lucide",
		"nestjs",
		"Nextjs",
		"NODEMAILER",
		"Parens",
		"singlequotes",
		"tailwindcss",
		"tanstack",
		"VITE",
		"vsintellicode"
	],
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			{
				"scope": [
					"comment",
					"entity.name.type.class",
					"keyword",
					"constant",
					"storage.modifier",
					"storage.type.class.js"
				],
				"settings": {
					"fontStyle": "italic"
				}
			},
			{
				"scope": [
					"invalid",
					"keyword.operator",
					"constant.numeric.css",
					"keyword.other.unit.px.css",
					"constant.numeric.decimal.js",
					"constant.numeric.json"
				],
				"settings": {
					"fontStyle": ""
				}
			}
		]
	},
	"workbench.editorAssociations": {
		"*.copilotmd": "vscode.markdown.preview.editor",
		"*.docx": "default"
	},
	"editor.minimap.enabled": false,
	"workbench.sideBar.location": "right",
	"chat.commandCenter.enabled": false,
	"workbench.colorTheme": "One Dark Pro Darker",
	"docker.extension.dockerEngineAvailabilityPrompt": false,
	"github.copilot.enable": {
		"*": true,
		"plaintext": false,
		"markdown": false,
		"scminput": false
	},
	"glassit.alpha": 240,
	"workbench.statusBar.visible": false
}
